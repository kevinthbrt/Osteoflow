{
  "name": "osteoflow",
  "version": "1.0.17",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev -p 3456",
    "dev:electron": "npm run build:electron && concurrently \"npm run dev\" \"wait-on http://localhost:3456 && electron .\"",
    "build": "next build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "start": "next start -p 3456",
    "start:electron": "npm run build && npm run build:electron && electron .",
    "dist": "npm run build && npm run build:electron && electron-builder",
    "dist:win": "npm run build && npm run build:electron && electron-builder --win",
    "dist:mac": "npm run build && npm run build:electron && electron-builder --mac",
    "rebuild:electron": "electron-builder install-app-deps",
    "lint": "next lint",
    "test": "vitest",
    "test:e2e": "playwright test"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.1",
    "@radix-ui/react-avatar": "^1.1.0",
    "@radix-ui/react-checkbox": "^1.1.1",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-dropdown-menu": "^2.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-popover": "^1.1.1",
    "@radix-ui/react-progress": "^1.1.0",
    "@radix-ui/react-select": "^2.1.1",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-tabs": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-tooltip": "^1.1.2",
    "@react-pdf/pdfkit": "^3.2.0",
    "@react-pdf/renderer": "^3.4.4",
    "@tanstack/react-query": "^5.56.2",
    "@tanstack/react-table": "^8.20.5",
    "better-sqlite3": "^11.6.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "date-fns-tz": "^3.1.3",
    "electron-updater": "^6.3.9",
    "imapflow": "^1.2.7",
    "lucide-react": "^0.441.0",
    "next": "^16.1.4",
    "nodemailer": "^6.10.1",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.53.0",
    "resend": "^4.0.0",
    "tailwind-merge": "^2.5.2",
    "tailwindcss-animate": "^1.0.7",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.47.2",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^9.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-config-next": "14.2.12",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "5.9.3",
    "vitest": "^2.1.1",
    "wait-on": "^8.0.1"
  },
  "overrides": {
    "nodemailer": "^6.10.1"
  },
  "build": {
    "appId": "com.osteoflow.desktop",
    "productName": "Osteoflow",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*.js",
      "electron/**/*.js.map",
      ".next/**/*",
      "package.json",
      "next.config.mjs"
    ],
    "asar": false,
    "npmRebuild": true,
    "publish": {
      "provider": "github",
      "owner": "kevinthbrt",
      "repo": "Osteoflow"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.medical",
      "minimumSystemVersion": "10.15.0"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": [
        "fr"
      ]
    }
  }
}
